# Google API Key (Required for Gemini AI)
GOOGLE_API_KEY=your_google_api_key_here

# OpenAI (Whisper Speech-to-Text)
OPENAI_API_KEY=your_openai_api_key_here

# Speech-to-Text provider
# - openai: use OpenAI Whisper API (requires OPENAI_API_KEY)
# - local:  use local whisper.cpp server (requires whisper service in docker-compose)
STT_PROVIDER=local

# Optional: override whisper.cpp server base URL (default: http://whisper:8080)
WHISPER_BASE_URL=http://whisper:8080

# Database
DATABASE_URL=postgresql://lectgen:lectgen123@postgres:5432/lectgen_db

# MinIO
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123

# Redis
REDIS_URL=redis://redis:6379

# Backend
PORT=5000
NODE_ENV=development

# Frontend
VITE_API_URL=http://localhost:5000
FRONTEND_URL=http://localhost:3000

# JWT Authentication
JWT_SECRET=your_very_secure_jwt_secret_key_here_minimum_32_characters
ACCESS_TOKEN_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# Email Configuration (for password reset)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_specific_password
EMAIL_FROM=LectGen AI <noreply@lectgen.ai>

# Google OAuth (optional - for Google login)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback
