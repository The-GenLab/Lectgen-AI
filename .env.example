# ==============================================
# DOCKER SERVICES CREDENTIALS
# ==============================================

# PostgreSQL Database
POSTGRES_USER=lectgen
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_DB=lectgen_db
POSTGRES_PORT=5432

# MinIO Object Storage
MINIO_ROOT_USER=your_minio_admin_username
MINIO_ROOT_PASSWORD=your_secure_minio_password_here
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001

# Redis
REDIS_PORT=6379
REDIS_PASSWORD=optional_redis_password_here

# pgAdmin
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=your_secure_pgadmin_password_here
PGADMIN_PORT=5050
# ==============================================
# APPLICATION CONFIGURATION
# ==============================================

# Backend Server
PORT=5000
NODE_ENV=development

# Database URL (using variables)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:${POSTGRES_PORT}/${POSTGRES_DB}

# MinIO Configuration (using variables)
MINIO_ENDPOINT=minio
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=${MINIO_ROOT_USER}
MINIO_SECRET_KEY=${MINIO_ROOT_PASSWORD}

# Redis URL
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:${REDIS_PORT}

# Frontend
VITE_API_URL=http://localhost:5000
FRONTEND_URL=http://localhost:5173
CLIENT_URL=http://localhost:5173

# ==============================================
# THIRD-PARTY API KEYS
# ==============================================

# Google API Key (Required for Gemini AI)
GOOGLE_API_KEY=your_google_api_key_here

# OpenAI (Whisper Speech-to-Text)
OPENAI_API_KEY=your_openai_api_key_here

# Speech-to-Text provider
# - openai: use OpenAI Whisper API (requires OPENAI_API_KEY)
# - local:  use local whisper.cpp server (requires whisper service in docker-compose)
STT_PROVIDER=local

# Optional: override whisper.cpp server base URL (default: http://whisper:8080)
WHISPER_BASE_URL=http://whisper:8080

# JWT Authentication
JWT_SECRET=your_very_secure_jwt_secret_key_here_minimum_32_characters
JWT_EXPIRES_IN=7d
ACCESS_TOKEN_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# Google OAuth (optional - for Google login)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback
